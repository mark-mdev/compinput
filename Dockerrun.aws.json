{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "markmdev/compinput-nginx",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["frontend", "backend"]
    },
    {
      "name": "lemma",
      "image": "markmdev/python_lemmas",
      "hostname": "lemma",
      "essential": true,
      "memory": 256
    },
    {
      "name": "backend",
      "image": "markmdev/compinput-backend",
      "hostname": "backend",
      "essential": true,
      "memory": 512,
      "command": ["npm", "run", "start"],
      "environment": [
        { "name": "SUPABASE_URL", "value": "" },
        { "name": "SUPABASE_SERVICE_API_KEY", "value": "" },
        { "name": "PORT", "value": "" },
        { "name": "OPENAI_API_KEY", "value": "" },
        { "name": "JWT_SECRET", "value": "" },
        { "name": "LEMMA_SERVICE_URL", "value": "" },
        { "name": "FRONTEND_URL", "value": "" },
        { "name": "REDIS_URL", "value": "" },
        { "name": "REDIS_PASSWORD", "value": "" },
        { "name": "REDIS_STRING", "value": "" },
        { "name": "DATABASE_URL", "value": "" }
      ],
      "links": ["lemma"]
    },
    {
      "name": "worker",
      "image": "markmdev/compinput-worker",
      "hostname": "worker",
      "essential": true,
      "memory": 384,
      "command": ["npm", "run", "worker"],
      "environment": [
        { "name": "SUPABASE_URL", "value": "" },
        { "name": "SUPABASE_SERVICE_API_KEY", "value": "" },
        { "name": "PORT", "value": "" },
        { "name": "OPENAI_API_KEY", "value": "" },
        { "name": "JWT_SECRET", "value": "" },
        { "name": "LEMMA_SERVICE_URL", "value": "" },
        { "name": "FRONTEND_URL", "value": "" },
        { "name": "REDIS_URL", "value": "" },
        { "name": "REDIS_PASSWORD", "value": "" },
        { "name": "REDIS_STRING", "value": "" },
        { "name": "DATABASE_URL", "value": "" }
      ],
      "links": ["lemma"]
    },
    {
      "name": "frontend",
      "image": "markmdev/compinput-frontend",
      "hostname": "frontend",
      "essential": true,
      "memory": 256
    }
  ]
}
