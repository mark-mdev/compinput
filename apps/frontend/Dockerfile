FROM node:alpine
WORKDIR "/app"
ARG NEXT_PUBLIC_BACKEND_URL
ARG NEXT_PUBLIC_AUDIO_BUCKET_URL
ENV NEXT_PUBLIC_BACKEND_URL=$NEXT_PUBLIC_BACKEND_URL
ENV NEXT_PUBLIC_AUDIO_BUCKET_URL=$NEXT_PUBLIC_AUDIO_BUCKET_URL
COPY ./package*.json .
RUN npm install
COPY . .
RUN npm run build
CMD ["npm", "run", "start"]